{{!
    @template block_kamaleon/contents

    The contents list.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "shorttitle": "MC",
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "content": "My content description",
                "banner": "https://example.com/banner.png",
                "icon": "https://example.com/icon.png",
                "showedition": false,
            ],
            "instanceid": "99"
        ]
    }
}}

<div class="block_kamaleon-contentslist">
    <div class="row">
        {{#contents}}
        <div class="col-md-4">
            <div class="card mb-3 one-content">
                <div class="card-header">
                    {{#shorttitle}}
                        <span class="badge badge-secondary">{{shorttitle}}</span>
                    {{/shorttitle}}
                    <h5 class="card-title">
                        {{#hasicon}}
                            <img src="{{icon}}" alt="" />
                        {{/hasicon}}
                        {{title}}
                    </h5>
                </div>
                {{#hasbanner}}
                    <img src="{{banner}}" alt="{{title}}" />
                {{/hasbanner}}

                <div class="card-body">
                    <h6>{{subtitle}}</h6>
                    <div>
                        {{{content}}}
                    </div>

                    {{#url}}
                    <div>
                        <a href="{{url}}" class="btn btn-success" {{#target}}target="{{target}}"{{/target}}>
                            {{#linkname}}{{linkname}}{{/linkname}}
                            {{^linkname}}{{#str}} morenavigationlinks {{/str}}{{/linkname}}
                        </a>
                    </div>
                    {{/url}}
                </div>

                {{#showedition}}
                <div class="card-footer text-muted">
                    {{> block_kamaleon/edition}}
                </div>
                {{/showedition}}
            </div>
        </div>
        {{/contents}}
    </div>
</div>
