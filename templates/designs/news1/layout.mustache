{{!
    @template block_kamaleon/designs/news1/layout

    The designed layout.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "id": 1,
                "index": 0,
                "shorttitle": "MC",
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "target": "_blank",
                "linkname": "My content link name",
                "content": "My content description",
                "banner": "https://example.com/banner.png",
                "hasbanner": true,
                "hasicon": false,
                "showedition": false
            ],
            "instanceid": "99"
        ]
    }
}}

<section class="container-cards">
    {{#contents}}
    <div class="card-cards">
        <div class="card-image">
            {{#hasicon}}
                <img class="news-icon" src="{{icon}}" alt="">
            {{/hasicon}}
            {{#hasbanner}}
                <img class="news-banner" src="{{banner}}" alt="{{title}}">
            {{/hasbanner}}
        </div>

        <div class="card-body">
            {{#vars}}{{#date}}
                <div class="news-date">{{.}}</div>
            {{/date}}{{/vars}}
            <h5 class="news-title">{{title}}</h5>
            <div class="news-subtitle">
                <h6>{{subtitle}}</h6>
            </div>

            <div class="card_content-content">
                {{{content}}}
            </div>

            {{#url}}
            <div class="card_buttons">
                <a href="{{url}}" class="btn btn-primary" {{#target}}target="{{target}}"{{/target}}>
                    {{#linkname}}{{linkname}}{{/linkname}}
                    {{^linkname}}{{#str}} readmore, block_kamaleon {{/str}}{{/linkname}}
                </a>
            </div>
            {{/url}}

            {{#showedition}}
            <div class="card-footer text-muted">
                {{> block_kamaleon/edition}}
            </div>
            {{/showedition}}
        </div>
    </div>
    {{/contents}}
</section>
