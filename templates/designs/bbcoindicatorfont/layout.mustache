{{!
    @template block_kamaleon/bbcoindicatorfont/layout

    The designed layout.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "id": 1,
                "index": 0,
                "shorttitle": "MC",
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "target": "_blank",
                "linkname": "My content link name",
                "content": "My content description",
                "banner": "https://example.com/banner.png",
                "hasbanner": true,
                "icon": "https://example.com/icon.png",
                "hasicon": true,
                "showedition": false,
            ],
            "instanceid": "99"
        ]
    }
}}

<section class="container-indicators">
    {{#contents}}
    <div>
        {{#shorttitle}}<i class="icon fa fa-{{shorttitle}}"></i>{{/shorttitle}}
        {{#title}}<h5>{{title}}</h5>{{/title}}
        {{#subtitle}}<h4>{{subtitle}}</h4>{{/subtitle}}
        {{#showedition}}
            {{> block_kamaleon/edition}}
        {{/showedition}}
    </div>
    {{/contents}}
</section>
