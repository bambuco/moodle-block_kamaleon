{{!
    @template block_kamaleon/designs/btnicon1/layout

    Template for Buttons with image - 1 design.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "icon": "https://example.com/icon.png",
                "target": "_blank",
                "showedition": false,
            ],
            "instanceid": "99"
        ]
    }
}}
<section class="container-cards">
    {{#contents}}
    <div class="card-cards">
        {{#url}}
            <a href="{{url}}" class="btn-special {{#inmodal}}kam-openinmodal{{/inmodal}}" {{#target}}target="{{target}}"{{/target}}>
        {{/url}}
        {{^url}}
            <span class="btn-special">
        {{/url}}
            <span class="card_image">
            {{#icon}}
                <img src="{{icon}}" alt="{{title}}">
            {{/icon}}
            {{^icon}}
                {{#shorttitle}}<i class="icon fa fa-{{shorttitle}}"></i>{{/shorttitle}}
            {{/icon}}
            </span>
            <div class="card_content">
                {{title}}
            </div>
        {{#url}}
            </a>
        {{/url}}
        {{^url}}
            </span>
        {{/url}}
        {{#showedition}}
            {{> block_kamaleon/edition}}
        {{/showedition}}
    </div>
    {{/contents}}
</section>
