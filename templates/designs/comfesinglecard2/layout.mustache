{{!
    @template block_kamaleon/comfesinglecard2/layout

    The designed layout.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "id": 1,
                "index": 0,
                "shorttitle": "MC",
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "target": "_blank",
                "linkname": "My content link name",
                "content": "My content description",
                "banner": "https://example.com/banner.png",
                "hasbanner": true,
                "icon": "https://example.com/icon.png",
                "hasicon": true,
                "showedition": false,
            ],
            "instanceid": "99"
        ]
    }
}}

<section class="container-cards">
    {{#contents}}
    <div class="card-cards" {{#banner}}style="background-image: url('{{banner}}');"{{/banner}}>
        <div class="card_content">
            {{#title}}<h4>{{title}}</h4>{{/title}}
            {{#content}}{{{content}}}{{/content}}
            {{#showedition}}
                {{> block_kamaleon/edition}}
            {{/showedition}}
        </div>
        {{#url}}
        <div class="card_footer">
                <a href="{{url}}" {{#target}}target="{{target}}"{{/target}} class="btn btn-primary">
                {{#linkname}}
                    {{linkname}}
                {{/linkname}}
                {{^linkname}}
                    {{#title}}
                        {{#str}} moreinfo, block_kamaleon {{/str}}
                    {{/title}}
                {{/linkname}}
                </a>
        </div>
        {{/url}}
    </div>
    {{/contents}}
</section>
