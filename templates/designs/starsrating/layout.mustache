{{!
    @template block_kamaleon/designs/rating/layout

    The designed layout.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "id": 1,
                "index": 0,
                "shorttitle": "MC",
                "title": "My content",
                "url": "https://example.com",
                "target": "_blank",
                "linkname": "My content link name",
                "content": "My content description",
                "hasbanner": false,
                "icon": "https://example.com/icon.png",
                "hasicon": true,
                "showedition": false
            ],
            "instanceid": "99"
        ]
    }
}}

<section class="container-cards">
    {{#contents}}
    <div class="card-cards">
        <div class="card-body">

            <h5>
                {{#url}}
                    <a href="{{url}}" {{#inmodal}}class="kam-openinmodal" {{/inmodal}}{{#target}}target="{{target}}"{{/target}}>
                        {{title}}
                    </a>
                {{/url}}
                {{^url}}
                    {{title}}
                {{/url}}
            </h5>

            <div class="card_content-content">
                {{{content}}}
            </div>

            <div class="stars-rating">
                {{#vars}}{{#rating}}
                    <div class="star" data-rating="{{.}}"><span class="filled">&#9733;</span><span class="empty">&#9734;</span></div>
                {{/rating}}{{/vars}}
            </div>
            <div class="rating-date">
                {{shorttitle}}
            </div>

            {{#vars}}{{#author}}
                <div class="by">
                    <div class="byname">
                        <img src="{{{icon}}}" class="authoricon"/>
                        {{{author}}}
                    </div>
                </div>
            {{/author}}{{/vars}}

            {{#showedition}}
            <div class="card-footer text-muted">
                {{> block_kamaleon/edition}}
            </div>
            {{/showedition}}
        </div>

    </div>
    {{/contents}}
</section>
