{{!
    @template block_kamaleon/confiarsimple1/layout

    The designed layout.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "id": 1,
                "index": 0,
                "shorttitle": "MC",
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "target": "_blank",
                "linkname": "My content link name",
                "content": "My content description",
                "banner": "https://example.com/banner.png",
                "hasbanner": true,
                "icon": "https://example.com/icon.png",
                "hasicon": true,
                "showedition": false,
            ],
            "instanceid": "99"
        ]
    }
}}

<section class="container-contents">
    {{#contents}}
    <div class="single-content">
        <div class="content-image">
            {{#banner}}
                {{#url}}
                    <a href="{{url}}" {{#inmodal}}class="kam-openinmodal" {{/inmodal}}{{#target}}target="{{target}}"{{/target}}>
                        <img src="{{banner}}" alt="{{title}}" title="{{title}}">
                    </a>
                {{/url}}
                {{^url}}
                    <img src="{{banner}}" alt="{{title}}" title="{{title}}">
                {{/url}}
            {{/banner}}
        </div>
        <div class="content-content">
            <div>
                <h5>{{title}}</h5>
                {{#content}}
                    {{{content}}}
                {{/content}}
                {{#url}}
                    <a href="{{url}}" {{#target}}target="{{target}}"{{/target}} class="btn btn-primary {{#inmodal}}kam-openinmodal{{/inmodal}}">
                        {{linkname}}
                    </a>
                {{/url}}
                {{#showedition}}
                    {{> block_kamaleon/edition}}
                {{/showedition}}
            </div>
        </div>
    </div>
    {{/contents}}
</section>
