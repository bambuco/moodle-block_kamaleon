{{!
    @template block_kamaleon/contents

    The contents list.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "shorttitle": "MC",
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "content": "My content description",
                "banner": "https://example.com/banner.png",
                "icon": "https://example.com/icon.png",
                "showedition": false,
            ],
            "instanceid": "99"
        ]
    }
}}

<section class="container-cards">
    {{#contents}}
    <div class="card-cards">
        <div class="card_imagen">
            {{#banner}}
                <img src="{{banner}}" alt="{{shorttitle}}" title="{{shorttitle}}">
            {{/banner}}
        </div>
        <div class="card_content">
            <h2>{{title}}</h2>
            <div class="card_content-content">
                {{{content}}}
            </div>
            {{#url}}
                <p><a href="{{url}}" class="btn btn-primary" {{#target}}target="{{target}}"{{/target}}>
                    {{#linkname}}{{linkname}}{{/linkname}}
                    {{^linkname}}{{#str}} morenavigationlinks {{/str}}{{/linkname}}
                </a></p>
            {{/url}}
        </div>
        {{#showedition}}
            {{> block_kamaleon/edition}}
        {{/showedition}}
    </div>
    {{/contents}}
</section>
