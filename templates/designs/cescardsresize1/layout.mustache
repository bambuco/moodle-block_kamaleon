{{!
    @template block_kamaleon/contents

    The contents list.

    Example context (json):
    {
        "attributes": [
            "contents": [],
            "instanceid": "99"
        ]
    }
}}

<section class="container-cards">
    {{#contents}}
    <div class="card-cards">
        <div class="card_imagen">
            {{#banner}}
                <img src="{{banner}}" alt="{{shorttitle}}">
            {{/banner}}
        </div>
        <div class="card_content">
            <h2>{{title}}</h2>
            {{{content}}}
            {{#url}}
                <p><a href="{{url}}" class="btn btn-success" {{#target}}target="{{target}}"{{/target}}>
                    {{#linkname}}{{linkname}}{{/linkname}}
                    {{^linkname}}{{#str}} morenavigationlinks {{/str}}{{/linkname}}
                </a></p>
            {{/url}}
        </div>
    </div>
    {{/contents}}
</section>
