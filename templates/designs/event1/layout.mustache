{{!
    @template block_kamaleon/designs/event1/layout

    The designed layout.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "id": 1,
                "index": 0,
                "shorttitle": "MC",
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "target": "_blank",
                "linkname": "My content link name",
                "content": "My content description",
                "banner": "https://example.com/banner.png",
                "hasbanner": true,
                "icon": "https://example.com/icon.png",
                "hasicon": true,
                "showedition": false,
            ],
            "instanceid": "99"
        ]
    }
}}

<section class="container-cards">
    {{#contents}}
    <div class="card-cards">
        <div class="card-header" {{#hasbanner}}style="background-image: url({{banner}});"{{/hasbanner}}>
            {{#shorttitle}}
                <span class="event-date">{{shorttitle}}</span>
            {{/shorttitle}}
            {{#hasicon}}
                <img class="event-icon" src="{{icon}}" alt="" />
            {{/hasicon}}
        </div>
        <div class="event-subtitle">
            <h6>{{subtitle}}</h6>
        </div>
        <div class="event-title">
            <h5>{{title}}</h5>
        </div>
        <div class="moreinfo">
            {{#vars}}{{#author}}
                <div class="by">
                    <span class="bylabel">
                        {{#str}} bylabel, block_kamaleon {{/str}}
                    </span>
                    <span class="byname">
                        {{author}}
                    </span>
                </div>
            {{/author}}{{/vars}}
        </div>

        <div class="card-body">
            <div class="card_content-content">
                {{{content}}}
            </div>

            {{#url}}
            <div class="card_buttons">
                <a href="{{url}}" class="btn btn-primary" {{#target}}target="{{target}}"{{/target}}>
                    {{#linkname}}{{linkname}}{{/linkname}}
                    {{^linkname}}{{#str}} morenavigationlinks {{/str}}{{/linkname}}
                </a>
            </div>
            {{/url}}

            {{#showedition}}
            <div class="card-footer text-muted">
                {{> block_kamaleon/edition}}
            </div>
            {{/showedition}}
        </div>
    </div>
    {{/contents}}
</section>
