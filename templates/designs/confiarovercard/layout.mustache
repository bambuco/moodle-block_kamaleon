{{!
    @template block_kamaleon/designs/confiarovercard/layout

    The designed layout.

    Example context (json):
    {
        "attributes": [
            "contents": [
                "id": 1,
                "index": 0,
                "shorttitle": "MC",
                "title": "My content",
                "subtitle": "My content subtitle",
                "url": "https://example.com",
                "target": "_blank",
                "linkname": "My content link name",
                "content": "My content description",
                "banner": "https://example.com/banner.png",
                "hasbanner": true,
                "icon": "https://example.com/icon.png",
                "hasicon": true,
                "showedition": false,
            ],
            "instanceid": "99"
        ]
    }
}}

<section class="container-cards">
    {{#contents}}
    <div class="card-cards" {{#banner}}style="background-image: url({{banner}});"{{/banner}}>
        <div class="card_initial">
            <h5>{{title}}</h5>
            <div class="card_content">
                <div class="card_content-content">
                    {{{content}}}
                </div>
                {{#url}}
                    <div class="card_buttons">
                        <a href="{{url}}" class="btn btn-primary" {{#target}}target="{{target}}"{{/target}}>{{linkname}}</a>
                    </div>
                {{/url}}
                {{#showedition}}
                    {{> block_kamaleon/edition}}
                {{/showedition}}
           </div>
        </div>
    </div>
    {{/contents}}
</section>
